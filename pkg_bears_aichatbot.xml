  <description>Package containing the Bears AI Chatbot site module and associated plugins (task scheduler and optional content event plugin).</description>

  <scriptfile>script.php</scriptfile>
  
  <files>
    <file type="component" id="com_bears_aichatbot" client="administrator">com_bears_aichatbot</file>
    <file type="module" client="site" id="mod_bears_aichatbot">mod_bears_aichatbot</file>
    <file type="plugin" group="task" id="plg_task_bears_aichatbot">plugins/task/bears_aichatbot</file>
    <file type="plugin" group="content" id="plg_content_bears_aichatbot">plugins/content/bears_aichatbot</file>
