<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="content" version="5.0" method="upgrade">
  <name>plg_content_bears_aichatbot</name>
  <author>N6REJ</author>
  <authorEmail>programming@hallhome.us</authorEmail>
  <authorUrl>https://hallhome.us/joomla-extensions/bears-ai-chatbot</authorUrl>
  <copyright>Copyright (C) 2025 Troy Hall (N6REJ)</copyright>
  <creationDate>2025 October 02</creationDate>
  <version>2025.10.02.1</version>
  <license>GNU General Public License version 3 or later; see License.txt</license>
  <description>Content plugin to enqueue document collection updates on article changes.</description>
  <namespace>Joomla\Plugin\Content\BearsAichatbot</namespace>
  <files>
    <filename plugin="bears_aichatbot">bears_aichatbot.php</filename>
    <folder>services</folder>
    <folder>src</folder>
    <folder>language</folder>
  </files>
  <languages>
    <language tag="en-GB">language/en-GB/en-GB.plg_content_bears_aichatbot.ini</language>
    <language tag="en-GB">language/en-GB/en-GB.plg_content_bears_aichatbot.sys.ini</language>
  </languages>

  <config>
    <fields name="params">
      <fieldset name="basic" label="PLG_CONTENT_BEARS_AICHATBOT_FIELDSET_BASIC">
        <field
          name="enabled_queue"
          type="radio"
          default="1"
          class="btn-group btn-group-yesno"
          label="PLG_CONTENT_BEARS_AICHATBOT_ENABLE_QUEUE"
          description="PLG_CONTENT_BEARS_AICHATBOT_ENABLE_QUEUE_DESC"
        >
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>
      </fieldset>
    </fields>
  </config>
  
  <updateservers>
    <server type="extension" priority="1" name="Bears AI Chatbot Content Plugin Updates">https://raw.githubusercontent.com/N6REJ/bears_aichatbot/main/updates.xml</server>
  </updateservers>
</extension>
